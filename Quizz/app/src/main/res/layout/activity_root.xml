<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/root_splash_margin"
            android:text="@string/root_splash_text"
            android:textSize="@dimen/root_splash_text_size" />

        <ProgressBar
            android:layout_width="@dimen/root_splash_spinner_size"
            android:layout_height="@dimen/root_splash_spinner_size"
            android:layout_gravity="center"
            android:indeterminate="true" />

    </LinearLayout>

</RelativeLayout>
